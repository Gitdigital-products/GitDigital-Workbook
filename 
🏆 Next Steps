### **challenges/beginner/solutions/verify.sh**
```bash
#!/bin/bash

# Challenge Verification Script
# Run this to check if you completed challenges correctly

echo "üîç GitDigital Workbook Challenge Verifier"
echo "========================================"

check_challenge_1() {
    echo "Checking Challenge 1: First Steps..."
    
    if [ ! -d "my-first-repo" ]; then
        echo "‚ùå my-first-repo directory not found"
        return 1
    fi
    
    cd my-first-repo || return 1
    
    if [ ! -d ".git" ]; then
        echo "‚ùå Not a Git repository"
        cd ..
        return 1
    fi
    
    if [ ! -f "README.md" ]; then
        echo "‚ùå README.md not found"
        cd ..
        return 1
    fi
    
    if [ ! -f ".gitignore" ]; then
        echo "‚ùå .gitignore not found"
        cd ..
        return 1
    fi
    
    commit_count=$(git log --oneline | wc -l)
    if [ "$commit_count" -lt 3 ]; then
        echo "‚ùå Need at least 3 commits (found: $commit_count)"
        cd ..
        return 1
    fi
    
    echo "‚úÖ Challenge 1 completed successfully!"
    cd ..
    return 0
}

check_challenge_2() {
    echo "Checking Challenge 2: Git Status..."
    
    if [ ! -d "status-exercise" ]; then
        echo "‚ùå status-exercise directory not found"
        return 1
    fi
    
    cd status-exercise || return 1
    
    if ! git status | grep -q "nothing to commit"; then
        echo "‚ùå Repository should be clean"
        cd ..
        return 1
    fi
    
    file_count=$(ls -1 *.txt 2>/dev/null | wc -l)
    if [ "$file_count" -lt 3 ]; then
        echo "‚ùå Should have at least 3 .txt files"
        cd ..
        return 1
    fi
    
    echo "‚úÖ Challenge 2 completed successfully!"
    cd ..
    return 0
}

# Run checks
echo ""
check_challenge_1
echo ""
check_challenge_2

echo ""
echo "========================================"
echo "Verification complete! Keep practicing! üéâ"
```

challenges/interactive/git-simulator.js

```javascript
// Git Command Simulator - Interactive Learning Tool
// Run with: node git-simulator.js

const readline = require('readline');
const fs = require('fs');
const path = require('path');

class GitSimulator {
    constructor() {
        this.repository = {
            workingDir: {},
            stagingArea: {},
            commits: [],
            branches: {
                main: []
            },
            currentBranch: 'main',
            HEAD: null
        };
        
        this.rl = readline.createInterface({
            input: process.stdin,
            output: process.stdout
        });
        
        this.commands = {
            'init': this.init.bind(this),
            'status': this.status.bind(this),
            'add': this.add.bind(this),
            'commit': this.commit.bind(this),
            'log': this.log.bind(this),
            'branch': this.branch.bind(this),
            'checkout': this.checkout.bind(this),
            'merge': this.merge.bind(this),
            'help': this.help.bind(this),
            'quit': () => process.exit(0)
        };
    }
    
    init() {
        if (this.repository.HEAD !== null) {
            console.log('Reinitialized existing Git repository');
        } else {
            this.repository.HEAD = 'ref: refs/heads/main';
            console.log('Initialized empty Git repository');
        }
    }
    
    status() {
        console.log('\nOn branch', this.repository.currentBranch);
        
        const changes = Object.keys(this.repository.workingDir)
            .filter(file => !this.repository.stagingArea[file]);
        
        const staged = Object.keys(this.repository.stagingArea);
        
        if (staged.length > 0) {
            console.log('\nChanges to be committed:');
            staged.forEach(file => {
                console.log(`  new file: ${file}`);
            });
        }
        
        if (changes.length > 0) {
            console.log('\nUntracked files:');
            changes.forEach(file => {
                console.log(`  ${file}`);
            });
        }
        
        if (staged.length === 0 && changes.length === 0) {
            console.log('nothing to commit, working tree clean');
        }
    }
    
    add(args) {
        if (args.length === 0) {
            console.log('Usage: add <file> or add .');
            return;
        }
        
        const files = args[0] === '.' 
            ? Object.keys(this.repository.workingDir)
            : args.filter(arg => this.repository.workingDir[arg]);
        
        files.forEach(file => {
            this.repository.stagingArea[file] = this.repository.workingDir[file];
            delete this.repository.workingDir[file];
        });
        
        console.log(`Added ${files.length} file(s) to staging`);
    }
    
    commit(args) {
        if (args.length < 2 || args[0] !== '-m') {
            console.log('Usage: commit -m "message"');
            return;
        }
        
        const message = args.slice(1).join(' ');
        const stagedFiles = { ...this.repository.stagingArea };
        
        if (Object.keys(stagedFiles).length === 0) {
            console.log('No changes added to commit');
            return;
        }
        
        const commit = {
            hash: Math.random().toString(36).substr(2, 8),
            message: message,
            files: stagedFiles,
            branch: this.repository.currentBranch,
            timestamp: new Date().toISOString()
        };
        
        this.repository.commits.push(commit);
        this.repository.branches[this.repository.currentBranch].push(commit.hash);
        this.repository.stagingArea = {};
        
        console.log(`[${commit.hash.substring(0, 7)}] ${message}`);
        console.log(` ${Object.keys(stagedFiles).length} file(s) changed`);
    }
    
    log() {
        console.log('\nCommit History:');
        console.log('=' .repeat(50));
        
        this.repository.commits.forEach((commit, index) => {
            console.log(`\nCommit ${commit.hash.substring(0, 7)}`);
            console.log(`Date: ${commit.timestamp}`);
            console.log(`Branch: ${commit.branch}`);
            console.log(`Message: ${commit.message}`);
            console.log(`Files: ${Object.keys(commit.files).join(', ')}`);
        });
    }
    
    branch(args) {
        if (args.length === 0) {
            // List branches
            console.log('\nBranches:');
            Object.keys(this.repository.branches).forEach(branch => {
                const marker = branch === this.repository.currentBranch ? '*' : ' ';
                console.log(`${marker} ${branch}`);
            });
        } else if (args[0] === '-d') {
            // Delete branch
            const branchName = args[1];
            if (branchName === this.repository.currentBranch) {
                console.log(`Cannot delete current branch '${branchName}'`);
            } else if (this.repository.branches[branchName]) {
                delete this.repository.branches[branchName];
                console.log(`Deleted branch ${branchName}`);
            } else {
                console.log(`Branch '${branchName}' not found`);
            }
        } else {
            // Create new branch
            const branchName = args[0];
            if (this.repository.branches[branchName]) {
                console.log(`Branch '${branchName}' already exists`);
            } else {
                this.repository.branches[branchName] = [];
                console.log(`Created branch ${branchName}`);
            }
        }
    }
    
    checkout(args) {
        if (args.length === 0) {
            console.log('Usage: checkout <branch>');
            return;
        }
        
        const target = args[0];
        
        if (target === '-b') {
            const newBranch = args[1];
            this.repository.branches[newBranch] = [];
            this.repository.currentBranch = newBranch;
            console.log(`Switched to a new branch '${newBranch}'`);
        } else if (this.repository.branches[target]) {
            this.repository.currentBranch = target;
            console.log(`Switched to branch '${target}'`);
        } else {
            console.log(`Branch '${target}' not found`);
        }
    }
    
    merge(args) {
        if (args.length === 0) {
            console.log('Usage: merge <branch>');
            return;
        }
        
        const sourceBranch = args[0];
        
        if (!this.repository.branches[sourceBranch]) {
            console.log(`Branch '${sourceBranch}' not found`);
            return;
        }
        
        if (sourceBranch === this.repository.currentBranch) {
            console.log('Cannot merge a branch with itself');
            return;
        }
        
        console.log(`Merging '${sourceBranch}' into '${this.repository.currentBranch}'`);
        console.log('Auto-merging completed');
        console.log('Merge made by recursive strategy');
    }
    
    help() {
        console.log('\nAvailable commands:');
        console.log('  init              - Initialize a new repository');
        console.log('  status            - Show working directory status');
        console.log('  add <file>        - Add file to staging area');
        console.log('  commit -m "msg"   - Commit staged changes');
        console.log('  log               - Show commit history');
        console.log('  branch            - List branches');
        console.log('  branch <name>     - Create new branch');
        console.log('  branch -d <name>  - Delete branch');
        console.log('  checkout <branch> - Switch branches');
        console.log('  checkout -b <new> - Create and switch to new branch');
        console.log('  merge <branch>    - Merge branches');
        console.log('  help              - Show this help');
        console.log('  quit              - Exit simulator');
    }
    
    createFile(args) {
        if (args.length === 0) {
            console.log('Usage: create <filename> <content>');
            return;
        }
        
        const filename = args[0];
        const content = args.slice(1).join(' ') || 'Default content';
        
        this.repository.workingDir[filename] = content;
        console.log(`Created file: ${filename}`);
    }
    
    start() {
        console.log('üöÄ Git Command Simulator');
        console.log('=======================');
        console.log('Practice Git commands in a safe environment!');
        console.log('Type "help" for available commands');
        console.log('Type "quit" to exit\n');
        
        // Add file creation command
        this.commands['create'] = this.createFile.bind(this);
        
        this.prompt();
    }
    
    prompt() {
        this.rl.question('\ngit-sim> ', (input) => {
            const parts = input.trim().split(' ');
            const command = parts[0];
            const args = parts.slice(1);
            
            if (this.commands[command]) {
                this.commands[command](args);
            } else {
                console.log(`Unknown command: ${command}`);
                console.log('Type "help" for available commands');
            }
            
            this.prompt();
        });
    }
}

// Start simulator if run directly
if (require.main === module) {
    const simulator = new GitSimulator();
    simulator.start();
}

module.exports = GitSimulator;
```

